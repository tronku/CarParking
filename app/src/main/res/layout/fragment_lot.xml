<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LotFrag">

        <TextView
            android:id="@+id/slot_id"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_black"
            android:textColor="@android:color/black"/>

        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/parking_status"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_parking_red"/>

            <ImageView
                android:layout_marginTop="120dp"
                android:layout_marginStart="80dp"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_suv"
                android:layout_marginLeft="80dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/curved_bg"
                tools:text="Shubham Pathak"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/car_no"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/curved_bg"
                tools:text="UP14 AC244"
                android:gravity="center"
                android:textSize="24sp"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/available"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/curved_bg"
                android:layout_marginTop="10dp"
                android:text="AVAILABLE"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_black"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/dsc_logo"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>